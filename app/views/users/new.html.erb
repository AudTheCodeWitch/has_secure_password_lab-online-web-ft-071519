<h1>Register</h1>
<%= form_for @user do |f|  %>
  <div>
    <label>Name:</label>
    <%= f.text_field :name %>
  </div>

  <div>
    <label>Password:</label>
    <%= f.password_field :password %>
  </div>

  <div>
    <label>Password Confirmation:</label>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Register' %>
<% end %>